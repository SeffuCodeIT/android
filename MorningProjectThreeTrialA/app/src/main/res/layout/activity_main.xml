                <ImageView

                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/shuleo" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</ScrollView>