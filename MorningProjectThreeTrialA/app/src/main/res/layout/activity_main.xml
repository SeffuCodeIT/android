                android:layout_height="wrap_content">
                <TextView
                    android:textAlignment="center"
                    android:textSize="50sp"
                    android:textColor="#264bf1"
                    android:text="Hello sir ive just finished combining  all the information from android morning three projects so have a nice day"
                    android:layout_width="wrap_content"
